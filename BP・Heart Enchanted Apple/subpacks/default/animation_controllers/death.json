{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.death": {
      "initial_state": "alive",
      "states": {
        "alive": {
          "transitions": [
            {
              "dead": "!query.is_alive"
            }
          ],
          "on_exit": [
            "/function mv/death"
          ]
        },
        "dead": {
          "transitions": [
            {
              "alive": "query.is_alive"
            }
          ]
        }
      }
    }
  }
}